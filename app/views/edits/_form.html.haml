= bootstrap_form_for @edit do |f|
    = f.text_area :edit, hide_label: true, placeholder: "Текст правки"
    = f.hidden_field(:unanimou_id, :value => params[:unanimou_id])
    = f.hidden_field(:user_id, :value => current_user.id)
    = f.submit 'Отправить', unanimou_id: params[:unanimou_id], user_id: current_user.id