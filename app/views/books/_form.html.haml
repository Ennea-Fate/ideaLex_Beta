= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :publ_date
    = f.date_select :publ_date
  .actions
    = f.submit 'Save'
