%h1 Listing books
%h1 POOK
%table
  %thead
    %tr
      %th ID
      %th Text
      %th Name
      %th Publ date
      %th
      %th
      %th

  %tbody
    - @books.each do |book|
      %tr
        %td= book.id
        %td= book.text
        %td= book.name
        %td= book.publ_date
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }

