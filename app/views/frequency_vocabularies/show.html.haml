.container
  .row.h-100
    .col-lg-100.align-self-end
      %h1.text-uppercase.text-white.font-weight-bold Частотный словник для книги "#{@frequency_vocabulary.book.name}"
      %hr.divider.my-4/

    %table.table.text-white
      %thead.thead-light
        %tr.pb-5
          -# %th{:scope => "col"} #
          %th{:scope => "col"} Слово
          %th{:scope => "col"} Частота вхождения
      %tbody
        - @freq_voc_words.each do |fvw|
          %tr
            -# %th{:scope => "row"} 1
            %td= fvw.word
            %td= fvw.occurrence_rate
  = raw pagy_bootstrap_nav(@pagy)
