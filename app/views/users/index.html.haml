  %thead
    %tr
      %th Email
      %th Password
      %th F name
      %th S name
      %th Role
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.password
        %td= user.f_name
